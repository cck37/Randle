generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum AttributeType {
  number
  multipart
  string
  date
}

model Attribute {
  id             Int              @id @default(autoincrement())
  name           String
  category_id    Int
  attributeType  AttributeType
  category       Category         @relation(fields: [category_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  itemAttributes ItemAttributes[]

  @@unique([name, category_id])
}

model ItemAttributes {
  id           Int       @id @default(autoincrement())
  attribute_id Int
  item_id      Int
  category_id  Int
  value        String
  attribute    Attribute @relation(fields: [attribute_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  category     Category  @relation(fields: [category_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  items        Items     @relation(fields: [item_id], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([attribute_id, item_id])
}

model Items {
  id             Int              @id @default(autoincrement())
  name           String
  category_id    Int
  itemAttributes ItemAttributes[]
  category       Category         @relation(fields: [category_id], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([name, category_id])
}

model Category {
  id             Int              @id @default(autoincrement())
  title          String           @unique
  themeName      String
  attributes     Attribute[]
  itemAttributes ItemAttributes[]
  items          Items[]
}
