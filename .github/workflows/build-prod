name: Build and Deploy

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Node.js
      uses: actions/setup-node@v2
      with:
        node-version: 14

    - name: Build the Client App
      run: |
        cd /client/randle
        npm install
        npm run build

    - name: Start the Node Server
      run: |
        cd /server/randle
        npm start
